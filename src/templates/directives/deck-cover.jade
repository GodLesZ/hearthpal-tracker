div.deck-cover(ng-class="{ interactive: interactive }")
  div.controls
    span.delete-deck.glyphicon.glyphicon-remove(
      ng-click="go('/deck-builder/delete/' + deckFile, 'Are you sure you want to delete your ' + deckName + ' ' + deckClass + ' deck?'); $event.stopPropagation();",
      title="Delete {{deckName}} Deck"
    )
    span.edit-deck.glyphicon.glyphicon-edit(
      ng-click="go('/deck-builder/edit/' + deckFile); $event.stopPropagation();",
      title="Edit {{deckName}} Deck"
    )
  img.cover(
    ng-src="{{classImageUrl}}",
    ng-class="{ interactive: interactive }"
  )
  span.name {{deckName}}
